# =============================================================================
# Example Terraform Variables
# =============================================================================
# Copy/Rename to "terraform.tfvars" and customize this file for your environment.
# 
# Required environment variables (set before running):
#   export TF_VAR_rancher_api_token="your-rancher-api-token"
#   export TF_VAR_hcloud_token="your-hetzner-token"
# =============================================================================

# Rancher API Configuration
rancher_api_url = "https://rancher.yourdomain.com"

# SSH Configuration
ssh_key_path = "~/.ssh/id_rsa.pub"

# RKE2 Version (optional, defaults to v1.34.2+rke2r1)
# rke2_version = "v1.34.2+rke2r1"

# Default Server Type (optional, defaults to cx33)
# server_type = "cx33"

# Default Node Count per Cell (optional, defaults to 3)
# node_count_per_cell = 3

# Cell Definitions
# Each cell is a separate downstream RKE2 cluster
cells = {
  "germany-cluster-1" = {
    region      = "nbg1"
    node_count  = 3
    server_type = "cx33"
    labels = {
      project        = "skies-dota"
      region         = "germany"
      cluster_id     = "1"
      deployment_env = "development"
      observability-hub = "true"
    }
  }

  # Uncomment to add Finland cell
  # "finland-cluster-1" = {
  #   region      = "fsn1"
  #   node_count  = 3
  #   server_type = "cx33"
  #   labels = {
  #     project        = "skies-dota"
  #     region         = "finland"
  #     cluster_id     = "2"
  #     deployment_env = "development"
  #     observability-hub = "false"
  #   }
  # }
}
